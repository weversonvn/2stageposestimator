%% instalar anaconda
wget https://repo.continuum.io/archive/Anaconda2-5.0.1-Linux-x86_64.sh
bash ~/Downloads/Anaconda2-5.0.1-Linux-x86_64.sh

%% instalar biblioteca de wavelet bob.ip.gabor
conda config --add channels https://www.idiap.ch/software/bob/conda
conda install bob.ip.gabor

%% reverte a versão do python para ficar compatível na instalação do opencv
conda install python=2.7.9



%% instalar opencv via codigo fonte
% pré-requisitos
sudo apt-get install build-essential
sudo apt-get install cmake git libgtk2.0-dev pkg-config libavcodec-dev libavformat-dev libswscale-dev % obrigatórios
sudo apt-get install python-dev python-numpy libtbb2 libtbb-dev libjpeg-dev libpng-dev libtiff-dev libjasper-dev libdc1394-22-dev % opcionais
% executa a instalação
wget opencv-3.3.1.zip https://github.com/opencv/opencv/archive/3.3.1.zip
unzip opencv-3.3.1.zip
cd opencv-3.3.1
% cria uma pasta para armazenar o código compilado
mkdir build
cd build
% configura para o codigo
cmake -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/home/weverson/anaconda2/ -D BUILD_NEW_PYTHON_SUPPORT=ON -D INSTALL_PYTHON_EXAMPLES=ON -D INSTALL_C_EXAMPLES=ON -D BUILD_DOCS=ON -D BUILD_EXAMPLES=ON -D PYTHON2_EXECUTABLE=/home/weverson/anaconda2/bin/python -D PYTHON_INCLUDE_DIR=/home/weverson/anaconda2/include/python2.7 -D PYTHON_INCLUDE_DIR2=/usr/include/x86_64-linux-gnu/python2.7 -D PYTHON_LIBRARY=/home/weverson/anaconda2/lib/libpython2.7.so -D PYTHON2_NUMPY_INCLUDE_DIRS=/home/weverson/anaconda2/pkgs/numpy-1.13.3-py27hbcc08e0_0/lib/python2.7/site-packages/numpy/core/include WITH_GTK WITH_GTK_2_X ..
% atentar para o resultado do make, em particular se o python e suas bibliotecas serão instaladas
% se tudo ok então compila
make -j2 % no lugar do 2 coloca a quantidade de processadores da máquina
% instala as bibliotecas
sudo make install
echo "/usr/local/lib" > /etc/ld.so.conf.d/opencv.conf
sudo ldconfig
